<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="#" class="navbar-brand"><img src="~/Content/image/JobMeHorizontal.png" class="img-responsive logo" alt="JobMe Logo" /></a>  <!--make link to User startpage -->
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Jobs", "Index", "Home")</li> <!-- Make link to Jobspage -->
                    <!-- | indsætte her -->
                    <li>@Html.ActionLink("Virksomhed", "About", "Home")</li> <!-- Make link til companies -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <img src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" class="profile-picture img-responsive img-circle" alt="Something"> <!-- Make dynamic profile picture -->
                            <strong>Sofie Lund Mogensen</strong>
                            <span class="glyphicon glyphicon-chevron-down"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <div class="navbar-login">
                                    <div class="row">
                                        <div class="col-lg-4">
                                            <p class="text-center">
                                                <img src="https://x1.xingassets.com/assets/frontend_minified/img/users/nobody_m.original.jpg" class="profile-picture-big img-responsive img-circle" alt="Something"> <!-- Make dynamic profile picture -->
                                            </p>
                                        </div>
                                        <div class="col-lg-8">
                                            <p class="text-left p-mobile"><strong>Vestas</strong></p>
                                            <p class="text-left p-mobile small">Vestas@email.com</p>
                                            <p class="text-left">
                                                <a href="#" class="btn btn-block btn-sm btn-blue">Virksomheden</a>
                                            </p>
                                            <p class="text-left">
                                                <a href="#" class="btn btn-block btn-sm btn-blue">Redigere Profil</a>
                                            </p>
                                            <p class="text-left">
                                                <a href="#" class="btn btn-block btn-sm btn-blue">Opret Jobs</a>
                                            </p>
                                            <p class="text-left">
                                                <a href="#" class="btn btn-block btn-sm btn-blue">Ansøgere</a>
                                            </p>
                                            <p class="text-left">
                                                <a href="#" class="btn btn-block btn-sm btn-blue">Boots</a>
                                            </p>
                        

                                        </div>
                                    </div>
                                </div>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <div class="navbar-login navbar-login-session">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <p>
                                                <a href="#" class="btn btn-darkBlue btn-block">Log ud</a> <!--Make logud link-->
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>


                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    

</body>
</html>

